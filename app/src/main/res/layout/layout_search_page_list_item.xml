<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_4"
    android:layout_marginTop="@dimen/dimen_4"
    android:foreground="@drawable/ripple_accent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_0"
    app:cardElevation="@dimen/dimen_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/main_margin_16"
        android:paddingRight="@dimen/main_margin_16"
        android:paddingTop="@dimen/dimen_10">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/main_margin_16" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_toRightOf="@id/iv_cover"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_333"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/dimen_6"
            android:layout_toRightOf="@id/iv_cover"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_999"
            android:textSize="@dimen/dimen_12" />
    </RelativeLayout>
</android.support.v7.widget.CardView>