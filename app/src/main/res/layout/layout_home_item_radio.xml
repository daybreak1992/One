<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8"
    android:layout_marginLeft="@dimen/main_margin_16"
    android:layout_marginRight="@dimen/main_margin_16"
    android:layout_marginTop="@dimen/dimen_8"
    android:foreground="@drawable/ripple_accent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_4"
    app:cardElevation="@dimen/dimen_2">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_334">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_180"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/v_line_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_below="@id/iv_cover"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_line_divider"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/main_margin_16"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_line_divider"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/main_margin_16"
            android:layout_marginTop="@dimen/dimen_10"
            android:src="@drawable/aliwx_chatfrom_play_r03" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/v_line_divider"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginRight="@dimen/main_margin_16"
            android:layout_marginTop="@dimen/dimen_10"
            android:src="@drawable/feeds_share" />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_line_divider"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginRight="@dimen/main_margin_16"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_toLeftOf="@id/iv_share"
            android:drawableLeft="@drawable/feeds_laud_default"
            android:drawablePadding="@dimen/dimen_4"
            android:gravity="center"
            android:textColor="@color/color_999"
            android:textSize="@dimen/dimen_12" />
    </RelativeLayout>
</android.support.v7.widget.CardView>