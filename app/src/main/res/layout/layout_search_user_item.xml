<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_160"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_2"
    android:layout_marginLeft="@dimen/dimen_8"
    android:layout_marginRight="@dimen/dimen_8"
    android:layout_marginTop="@dimen/dimen_2"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_1"
    app:cardElevation="@dimen/dimen_2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/main_margin_16">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/color_333"
            android:textSize="@dimen/dimen_14" />

        <Button
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/selector_btn_accent"
            android:text="@string/btn_follow"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_follow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/color_666"
            android:textSize="@dimen/dimen_12" />
    </RelativeLayout>
</android.support.v7.widget.CardView>