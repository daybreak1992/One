<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8"
    android:layout_marginLeft="@dimen/main_margin_16"
    android:layout_marginRight="@dimen/main_margin_16"
    android:layout_marginTop="@dimen/dimen_8"
    android:foreground="@drawable/ripple_accent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_4"
    app:cardElevation="@dimen/dimen_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/main_margin_16"
        android:paddingTop="@dimen/main_margin_16">

        <TextView
            android:id="@+id/tv_tag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_999"
            android:textSize="@dimen/dimen_12" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tag_title"
            android:layout_marginLeft="@dimen/main_margin_16"
            android:layout_marginRight="@dimen/main_margin_16"
            android:layout_marginTop="@dimen/dimen_10"
            android:textColor="@color/color_333"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/main_margin_16"
            android:layout_marginRight="@dimen/main_margin_16"
            android:layout_marginTop="@dimen/dimen_10"
            android:textColor="@color/color_999"
            android:textSize="@dimen/dimen_16" />

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@id/tv_author"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/main_margin_16"
            android:layout_marginTop="@dimen/main_margin_16"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_xiami"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignBottom="@id/iv_cover"
            android:layout_marginLeft="@dimen/main_margin_16"
            android:src="@drawable/xiami_right" />

        <TextView
            android:id="@+id/tv_music_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_cover"
            android:layout_marginBottom="@dimen/main_margin_16"
            android:layout_marginLeft="@dimen/main_margin_16"
            android:textColor="@color/color_666"
            android:textSize="@dimen/dimen_12" />

        <TextView
            android:id="@+id/tv_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_music_info"
            android:layout_marginBottom="@dimen/main_margin_16"
            android:layout_marginLeft="@dimen/main_margin_16"
            android:layout_marginRight="@dimen/main_margin_16"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/color_999"
            android:textSize="@dimen/dimen_14" />

        <TextView
            android:id="@+id/tv_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_forward"
            android:layout_marginLeft="@dimen/main_margin_16"
            android:textColor="@color/color_999"
            android:textSize="@dimen/dimen_12" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_forward"
            android:layout_marginRight="@dimen/main_margin_16"
            android:src="@drawable/feeds_share" />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_forward"
            android:layout_marginRight="@dimen/main_margin_16"
            android:layout_toLeftOf="@id/iv_share"
            android:drawableLeft="@drawable/feeds_laud_default"
            android:drawablePadding="@dimen/dimen_4"
            android:gravity="center"
            android:textColor="@color/color_999"
            android:textSize="@dimen/dimen_12" />
    </RelativeLayout>
</android.support.v7.widget.CardView>